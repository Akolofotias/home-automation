{
	"singleton" : true,
	"dependencies" : [],
	"category" : "notifications",
	"author" : "Z-Wave.Me",
	"homepage" : "http://razberry.z-wave.me",
	"icon" : "",
	"version" : "1.0.0",
	"maturity" : "stable",
	"repository" : {
		"type" : "git",
		"source" : "https://github.com/Z-Wave-Me/home-automation"
	},
	"defaults" : {
		"title" : "Device Monitor",
		"description" : "Creates an instance that monitors the status of every choosen device or device type. It sends notifications automatically if something has changed.",
		"monitorDevices": [],
		"monitorDeviceTypes": []
	},
	"schema": {
		"type": "object",
		"properties": {
			"monitorDevices": {
				"type": "array",
				"items": {
					"field": "enum",
					"datasource": "namespaces",
					"enum": "namespaces:devices_switchControl:deviceId,namespaces:devices_switchBinary:deviceId,namespaces:devices_switchMultilevel:deviceId,namespaces:devices_sensorBinary:deviceId",
					"required": false
				}
			},
			"monitorDeviceTypes": {
				"type": "array",
				"items": {
					"field": "enum",
					"datasource": "namespaces",
					"enum": ["all","switchBinary","switchMultilevel","switchControl","sensorBinary","sensorMultilevel","sensorMultiline","battery","thermostat","fan","doorlock"],
					"required": false
				}
			}
		},
		"required": false
	},
	"options": {
		"fields": {
			"monitorDevices": {
				"label": "Devices to be monitored",
				"fields": {
					"item": {
						"type": "select",
						"datasource": "namespaces",
						"field": "optionLabels",
						"optionLabels": "namespaces:devices_switchControl:deviceName,namespaces:devices_switchBinary:deviceName,namespaces:devices_switchMultilevel:deviceName,namespaces:devices_sensorBinary:deviceName"
					}
				}
			},
			"monitorDeviceTypes": {
				"label": "Device types to be monitored",
				"fields": {
					"item": {
						"type": "select",
						"datasource": "namespaces",
						"field": "optionLabels",
						"optionLabels": ["all device types","Switch Binary", "Switch Multilevel","Switch Control","Sensor Binary","Sensor Multilevel","Sensor Multiline","Battery","Thermostat","Fan","Doorlock"]
					}
				}
			}
		}
	}
}