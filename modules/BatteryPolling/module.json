{
    "autoload": false,
    "singleton": true,
    "userView": true,
    "defaults": {
        "title": "Battery Polling",
        "description": "Battery Polling description",
        "launchWeekDay": 0,
	    "warningLevel": 20
    },
    "schema": {
        "type": "object",
        "properties": {
            "launchWeekDay": {
                "type": "number",
                "required": true,
                "minimum": 0,
                "maximum": 6
            },
            "warningLevel": {
                "type": "select",
                "required": true,
                "data": {"5": "5%", "10": "10%", "15": "15%", "20": "20%"}
            },
            "status": {
                "type": "select",
                "required": true,
                "enum": ["enable", "disable"]
            },
            "items": {
                "datasource": "namespaces",
                "field": "enum",
                "enum": "namespaces:devices:deviceId"
            }
        },
        "required": false
    },
    "options": {
        "fields": {
            "launchWeekDay": {
                "type": "number",
                "label": "Launch WeekDay",
                "size": 40,
                "helper": "Enter weekday (0-6)"
            },
            "warningLevel": {
                "type": "number",
                "label": "Warning Level",
                "size": 40,
                "helper": "Enter warning level"
            },
            "status": {
                "type": "select",
                "label": "Status"
            },
            "items": {
                "datasource": "namespaces",
                "field": "optionLabels",
                "label": "Ice cream",
                "helper": "Guess my favorite ice cream?",
                "optionLabels": "namespaces:devices:deviceName"
            }
        },
        "focus": true,
        "type": "object",
        "validate": true,
        "disabled": false,
        "showMessages": true,
        "collapsible": true,
        "legendStyle": "button"
    }
}
