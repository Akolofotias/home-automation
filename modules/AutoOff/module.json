{
    "autoload": false,
    "userView": true,
    "singleton": false,
    "defaults": {
        "title": "Auto off devices",
        "description": "Turns off automatically devices after a defined time",
        "timeout": 5,
        "device": ""
    },
    "schema": {
        "description": "Automatically turn of devices after N seconds",
        "type": "object",
        "properties": {
            "device": {
                "field": "enum",
                "datasource": "namespaces",
                "enum": "namespaces:devices_switchBinary:deviceId,namespaces:devices_switchMultilevel:deviceId,namespaces:scenes:sceneId",
                "required": true
            },
            "timeout": {
                "type": "number",
                "required": true
            }
        },
        "required": false
    },
    "options": {
        "fields": {
            "device": {
                "label": "The device to be turned off after the timeout",
                "datasource": "namespaces",
                "field": "optionLabels",
                "optionLabels": "namespaces:devices_switchBinary:deviceName,namespaces:devices_switchMultilevel:deviceName,namespaces:scenes:sceneName"
            },
            "timeout": {
                "label": "Timout in seconds"
            }
        }
    }
}
